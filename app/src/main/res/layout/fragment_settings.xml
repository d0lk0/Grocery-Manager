<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.SettingsFragment">

    <Button
        android:id="@+id/insert_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert items"
        android:textColor="#000000"
        android:backgroundTint="#00FF00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_items"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/delete_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete items"
        android:textColor="#000000"
        android:backgroundTint="#FF0000"
        app:layout_constraintBottom_toTopOf="@+id/insert_items"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>

